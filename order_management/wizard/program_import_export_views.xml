<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_program_import_export_wizard_form" model="ir.ui.view">
        <field name="name">program.import.export.wizard.form</field>
        <field name="model">program.import.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Danh sách Vật tư">
                <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                </group>
                <footer>
                    <button name="import_excel" type="object" string="Import" class="btn-primary"/>
                    <button string="Đóng" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_progarm_import_export" model="ir.actions.act_window">
        <field name="name">Import định mức Vật tư</field>
        <field name="res_model">program.import.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>