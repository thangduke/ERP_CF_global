        <record id="view_product_code_tree" model="ir.ui.view">
            <field name="name">product.code.tree</field>
            <field name="model">product.code</field>
            <field name="arch" type="xml">
                <tree string="Style" class="o_general_list_view_product">
                    <field name="name" string="Style#"/>
                    <field name="ean_no" string="Buyer Style No."/>
                    <field name="description" string=" Style Name"/>
                    <field name="total_order_qty" string="Order.Qty"/>
                    <field name="total_test_qty" string="Test.Qty" optional="hide"/>
                    <field name="employee_id" string="Người tạo" widget="many2one_avatar_user" />
                    <field name="date_create" string="Ngày tạo" />
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_product_code" model="ir.actions.act_window">
            <field name="name">Style</field>
            <field name="res_model">product.code</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_product_code_search"/>
            <field name="context">{'create': True, }</field>     <!-- 'search_default_filter_order_id': 1 -->   
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo Style mới
                </p>
            </field>  
        </record>
        
    </data>
