<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search View -->
        <record id="view_material_invoice_search" model="ir.ui.view">
            <field name="name">material.invoice.search</field>
            <field name="model">material.invoice</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm mã Invoice">
                    <group expand="1" string="Lọc theo Đơn hàng">
                        <filter name="filter_order_id" string="Đơn hàng" domain="[]" context="{'group_by': 'order_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="order_id" string="Đơn hàng" icon="fa-shopping-cart"  enable_counters="1"
                            options="{'always_loaded': True}"/>
                    </searchpanel>
                </search>
            </field>
        </record>
        <!-- Form View -->
        <record id="view_material_invoice_form" model="ir.ui.view">
            <field name="name">material.invoice.form</field>
            <field name="model">material.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                 <!--       <sheet    style="max-width: 100%; height: 85vh;  margin-left: auto; margin-right: auto;" invisible="id"   >
                            <h1>
                                TẠO MÃ INVOICE MỚI
                            </h1>
                            <hr/>
                            <group>
                                <field name="name" string="Mã Invoice *" style="border: 1px solid #ced4da; font-size: 18px; margin-top: 5px; margin-bottom: 15px;" placeholder="Mã invoice mới..."/>
                            </group>
                            <group>
                                <field name="employee_id"  widget= "many2one_user_avatar" readonly="1"/>
                                <field name="date_create" readonly="1"/>
                            </group>
                            <group>
                                <group string="Thông tin nhà cung cấp">
                                    <field name="supplier" placeholder="Nhà cung cấp..."  style="border: 1px solid #ced4da;"/>
                                    <field name="invoice_no" placeholder="Mã hóa đơn..."  style="border: 1px solid #ced4da;"/>
                                </group>
                                <group string="Đơn hàng">
                                    <field name="order_id" placeholder="Mã đơn hàng..."  style="border: 1px solid #ced4da;"/>
                                </group>
                            </group>
                            <group string="Thông tin khác"> 
                                <field name="description" placeholder="Mô tả ..."  style="border: 1px solid #ced4da;"/>
                            </group>
                        </sheet>-->

                        <sheet  style="max-width: 100%; height: 85vh;  margin-left: auto; margin-right: auto; background-color: #f8f9fa"   >
                            <!-- PHẦN 1: 3 KHỐI NGANG -->
                            <div style="display: flex; gap: 10px; margin-bottom: 20px;">
                                <!-- Thông tin nhà cung cấp -->
                                <div style="flex: 1; background-color:rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                    <h3 style="font-size: 16px; font-weight: bold;">
                                        <span class="fa fa-industry" style="color: gray; margin-right: 5px;"></span>Thông tin nhà cung cấp
                                    </h3>
                                        <div style="display: flex;margin-bottom: 8px;">
                                            <span style="min-width: 110px; display: inline-block; font-weight: bold;">Nhà cung cấp :</span>
                                            <field name="supplier" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>
                                        
                                        <div style="display: flex;margin-bottom: 8px;">
                                            <span style="min-width: 110px; display: inline-block; font-weight: bold;">Mã nhà cung cấp :</span>
                                            <field name="invoice_no" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>
                                </div>

                                <!-- Đơn hàng -->
                                <div style="flex: 1; background-color: rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                    <h3 style="font-size: 16px; font-weight: bold;">
                                        <span class="fa fa-shopping-cart" style="color: gray; margin-right: 5px;"></span>Đơn hàng
                                    </h3>
                                        <div style="display: flex;margin-bottom: 8px;">
                                            <span style="min-width: 100px; display: inline-block; font-weight: bold;">Mã invoice :</span>
                                            <field name="name" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>      
                                        <div style="display: flex;margin-bottom: 8px;">
                                            <span style="min-width: 100px; display: inline-block; font-weight: bold;">Đơn hàng :</span>
                                            <field name="order_id" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>                             
                                </div>

                                <!-- Thông tin người tạo -->
                                <div style="flex: 1; background-color:rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                    <h3 style="font-size: 16px; font-weight: bold;">
                                        <span class="fa fa-user-circle" style="color: gray; margin-right: 5px;"></span>Thông tin người tạo
                                    </h3>
                                        <div style="display: flex;margin-bottom: 8px;">
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Người tạo :</span>
                                            <field name="employee_id" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>

                                        <div style="display: flex;margin-bottom: 8px;">
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Ngày tạo :</span>
                                            <field name="date_create" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div> 
                                </div>
                            </div>

                            <!-- PHẦN 2: DANH SÁCH VẬT TƯ -->
                            <div style="background-color: rgb(237, 237, 237); padding: 15px; border-radius: 6px;">
                                <!-- Thanh tiêu đề và tìm kiếm -->
                                <div class="d-flex align-items-center justify-content-between" style="margin-bottom: 10px;">
                                    
                                    <!-- BÊN TRÁI: Tiêu đề -->
                                    <div style="flex: 1; font-weight: bold; font-size: 16px;">
                                        <span class="fa fa-list-alt" style="padding-right: 6px; color: gray;"/>Danh sách vật tư
                                    </div>

                                    <!-- Ở GIỮA: Ô tìm kiếm -->
                                    <div style="flex: 1; display: flex; justify-content: center;">
                                        <div style="width: 500px; display: flex; justify-content: center; align-items: center; height: 38px; border: 1px solid #ced4da; border-radius: 3px; padding: 4px 8px;">
                                            <field name="search_active" invisible="1"/>
                                            <field name="search_text" placeholder="Tìm kiếm vật tư..." style="flex: 1; border: none; outline: none;"/>
                                            <button type="object" name="action_search" class="btn btn-link p-0" title="Search" invisible="search_active == True">
                                                <span class="fa fa-search" style="color: #6c757d;"/>
                                            </button>
                                            <button type="object" name="clear_search" class="btn btn-link p-0" title="Clear" invisible="search_active == False">
                                                <span class="fa fa-times" style="color: #6c757d;"/>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- BÊN PHẢI: Các nút -->
                                    <div style="flex: 1; display: flex; gap: 10px; align-items: center; justify-content: flex-end;">
                                        <!-- Nút Import -->
                                        <button type="object" name="action_import" class="btn btn-outline-success btn-sm" title="Import"
                                                style="border-radius: 4px;">
                                            <span class="fa fa-download" style="margin-right: 5px;"></span>
                                            <span style="color: #28a745;">Import</span>
                                        </button>

                                        <!-- Nút Export -->
                                        <button type="object" name="action_export" class="btn btn-outline-primary btn-sm" title="Export"
                                                style="border-radius: 4px;">
                                            <span class="fa fa-upload" style="margin-right: 5px;"></span>
                                            <span style="color: #007bff;">Export</span>
                                        </button>

                                        <!-- Nút Tuỳ chọn -->
                                        <div class="dropdown">
                                            <button name="button_dummy" type="object" class="btn btn-light fa fa-ellipsis-v"
                                                    data-bs-toggle="dropdown" aria-expanded="false" title="Tuỳ chọn"/>
                                            <div class="dropdown-menu" role="menu">
                                                <div class="dropdown-divider"/>
                                                <button name="action_delete_selected_lines" type="object" class="dropdown-item text-danger">
                                                    <i class="fa fa-trash me-2"/>Xoá
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </sheet>
                 </form>
            </field>
        </record>

        <record id="view_material_invoice_tree" model="ir.ui.view">
            <field name="name">material.invoice.tree</field>
            <field name="model">material.invoice</field>
            <field name="arch" type="xml">
                <tree string="Danh sách Invoice" sample="1" >
                    <field name="name" string="INVOICE"/>
                    <field name="order_id" string= "MÃ ĐƠN HÀNG"/>
                    <field name="employee_id" string="NGƯỜI TẠO" widget="many2one_avatar_user" />
                    <field name="supplier" string="NHÀ CUNG CẤP"  />
                    <field name="invoice_no" string="MÃ HÓA ĐƠN" />
                    <field name="description_display" string="MÔ TẢ" optional="hide"/>
                    <field name="active" widget="boolean_toggle" string="TRẠNG THÁI"/>
                </tree>
            </field>
        </record>

        <record id="action_material_invoice" model="ir.actions.act_window">
            <field name="name">Vật tư Mã Invoice</field>
            <field name="res_model">material.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': True, 'search_default_filter_order_id': 1}</field> 
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo Invoice vật tư mới
                </p>
            </field>
        </record>

    </data>
</odoo>
