<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!-- View for Factory -->
    <record id="view_factory_partner_form" model="ir.ui.view">
        <field name="name">factory.partner.form</field>
        <field name="model">factory.partner</field>
        <field name="arch" type="xml">
            <form string="Đơn vị sản xuất">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="location"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="website"/>
                        <field name="country_id"/>
                        <field name="city"/>
                        <field name="active"/>
                        <field name="color" widget="color"/>
                    </group>
                    <group>
                        <field name="employee_id"/>
                        <field name="avatar_name_job" readonly="1"/>
                        <field name="date_create" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_factory_partner_tree" model="ir.ui.view">
        <field name="name">factory.partner.tree</field>
        <field name="model">factory.partner</field>
        <field name="arch" type="xml">
            <tree string="Đơn vị sản xuất">
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_factory_partner" model="ir.actions.act_window">
        <field name="name">Đơn vị sản xuất</field>
        <field name="res_model">factory.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
