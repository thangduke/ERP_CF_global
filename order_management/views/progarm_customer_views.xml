<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Search View -->
        <record id="view_program_customer_search" model="ir.ui.view">
            <field name="name">program.customer.search</field>
            <field name="model">program.customer</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm định mức khách hàng">
                    <field name="color_size_id"/>
                    <field name="mtr_type"/>
                    <field name="mtr_no"/>
                    <field name="mtr_name"/>
                    <field name="supplier"/>
                    <field name="warehouse_material_id"/>
                    <group expand="1" string="Lọc theo Mã hàng">
                        <filter name="filter_color_size" string="Mã hàng" domain="[]" context="{'group_by': 'color_size_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="warehouse_material_id" string="Đơn hàng" icon="fa-shopping-cart"  enable_counters="1"
                            options="{'always_loaded': True}"/>
                    </searchpanel>
                </search>
            </field>
        </record>
        
        <!-- Form View -->
        <record id="view_program_customer_form" model="ir.ui.view">
            <field name="name">program.customer.form</field>
            <field name="model">program.customer</field>
            <field name="arch" type="xml">
                <form string="Định mức khách hàng">
                    <sheet>
                        <group>
                            <group>
                                <field name="color_size_id" required="1"/>
                                <field name="warehouse_material_id" required="1"/>
                                <field name="position"/>
                                <field name="mtr_no"/>
                                <field name="mtr_type"/>
                            </group>
                            <group>
                                <field name="mtr_code"/>
                                <field name="mtr_name"/>
                                <field name="dimension"/>
                            </group>
                        </group>
                        <group string="Thông tin màu vật tư">
                            <group>
                                <field name="material_color_id"/>
                                <field name="color_item"/>
                                <field name="color_name"/>
                                <field name="color_set"/>
                                <field name="color_code"/>
                            </group>
                        </group>
                        <group string="Số lượng và đơn vị">
                            <group>
                                <field name="est_qty"/>
                                <field name="act_qty"/>
                                <field name="rate"/>
                                <field name="supplier"/>
                                <field name="country"/>
                            </group>
                        </group>
                        <group string="Giá trị">
                            <group>
                                <field name="price"/>
                                <field name="cif_price"/>
                                <field name="fob_price"/>
                                <field name="exwork_price"/>
                                <field name="total"/>
                            </group>
                        </group>
                        <group>
                            <field name="x_selected"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_program_customer_tree" model="ir.ui.view">
            <field name="name">program.customer.tree</field>
            <field name="model">program.customer</field>
            <field name="arch" type="xml">
                <tree string="Định mức khách hàng" >
                    <field name="color_size_id" string="Mã hàng"/>
                    <field name="mtr_type" string="Loại vật tư"/>
                    <field name="mtr_name" string="Tên vật tư"/>
                    <field name="mtr_code" string="Code NCC"/>
                    <field name="mtr_no" string="Mã vật tư"/>                  
                    <field name="dimension" string="Kích thước"/>
                    <field name="color_item" string="Mã item màu"/>
                    <field name="color_name" string="Tên màu"/>
                    <field name="color_set" string="Bộ màu"/>
                    <field name="color_code" string="Mã code màu"/>
                    <field name="rate" string="Đơn vị tính"/>
                    <field name="price" string="Đơn giá"/>
                    <field name="supplier" string="Nhà cung cấp"/>
                    
                    <field name="est_qty" string="SL ước tính"/>
                    <field name="act_qty" string="SL thực tế"/>

                    <field name="cif_price" string="Giá CIF"/>
                    <field name="fob_price" string="Giá FOB"/>
                    <field name="exwork_price" string="Giá EXW"/>
                    <field name="total" string="Tổng thành tiền"/>
                    <field name="country" string="Quốc gia"/>               
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_program_customer" model="ir.actions.act_window">
            <field name="name">Định mức khách hàng</field>
            <field name="res_model">program.customer</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': True, 'search_default_filter_color_size': 1}</field>          
            <field name="search_view_id" ref="view_program_customer_search"/>
        </record>
    </data>
</odoo>