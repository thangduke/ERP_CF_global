<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- View cho model product.color -->
    <record id="view_product_color_form" model="ir.ui.view">
        <field name="name">product.color.form</field>
        <field name="model">product.color</field>
        <field name="arch" type="xml">
            <form string="Màu sắc sản phẩm">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color_code"/>
                        <field name="color" widget="color_picker"/>
                        <field name="active"/>
                        <field name="employee_id" readonly="1"/>
                        <field name="avatar_name_job" readonly="1"/>
                        <field name="date_create" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_color_tree" model="ir.ui.view">
        <field name="name">product.color.tree</field>
        <field name="model">product.color</field>
        <field name="arch" type="xml">
            <tree string="Màu sắc sản phẩm">
                <field name="name"/>
                <field name="color_code"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_color" model="ir.actions.act_window">
        <field name="name">Màu sắc sản phẩm</field>
        <field name="res_model">product.color</field>
        <field name="view_mode">tree,form</field>
    </record>



</odoo>
