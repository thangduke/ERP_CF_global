<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Search View -->
        <record id="view_product_color_size_search" model="ir.ui.view">
            <field name="name">product.color.size.search</field>
            <field name="model">product.color.size</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm Style">
                    <field name="warehouse_order_id" string="Chương trình"/>
                    <field name="product_code_id" string="Style"/>
                    <field name="color_id" string="Tên màu"/>
                    <field name="size_id" string="Tên size"/>
                    <!-- 
                    <field name="label" string="Nhãn"/>
                    <field name="size_type" string="Loại kích thước"/>-->
                    <group expand="1" string="Lọc theo Style">
                        <filter name="filter_product_code" string="Style" domain="[]" context="{'group_by': 'product_code_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="warehouse_order_id" string="Chương trình" icon="fa-shopping-cart"  enable_counters="1"/>
                        <field name="product_code_id" string="Style" icon="fa-barcode" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record> 
        <!-- Form View -->
        <record id="view_product_color_size_form" model="ir.ui.view">
            <field name="name">product.color.size.form</field>
            <field name="model">product.color.size</field>
            <field name="arch" type="xml">
                <form string="Style">
                    <sheet style="max-width: 100%; height: auto; margin-left: 10px; padding: 0; background-color: #f8f9fa" invisible="id == False">
                        <field name="currency_id" invisible="1" />

                        <!-- PHẦN 1: 3 KHỐI NGANG -->
                        <notebook>
                            <page string="Thông tin Style (Color,Size)" class="fw-bold"> 
                                <div style="display: flex; gap: 10px; margin-bottom: 0px;">
                                <!-- Thông tin chương trình -->
                                    <div style="flex: 1; background-color:rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                        <h3 style="font-size: 14px; font-weight: bold;">
                                            <span class="fa fa-industry" style="color: gray; margin-right: 5px;"></span>Thông tin Style
                                        </h3>

                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px">
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Chương trình:</span>
                                            <field name="warehouse_order_id" style="border: 1px solid #ced4da; width: 100%;"  readonly="1"/>
                                        </div>

                                        <div style="display: flex; margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold; ">Style:</span>
                                            <field name="product_code_id" style="border: 1px solid #ced4da; width: 100%; " readonly="1" />
                                        </div>

                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Khách hàng:</span>
                                            <field name="customer_id"  style="border: 1px solid #ced4da; width: 100%;" readonly="1" />
                                        </div>

                                    </div>
                                    <!-- Thông tin xuất kho -->
                                    <div style="flex: 1; background-color: rgb(237, 237, 237); padding: 10px; border-radius: 6px;" >
                                        <h3 style="font-size: 14px; font-weight: bold;">
                                            <span class="fa fa-shopping-cart" style="color: gray; margin-right: 5px;"></span>Thông tin sản phẩm
                                        </h3>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Color#:</span>
                                            <field name="color" style="border: 1px solid #ced4da; width: 100%;" readonly="1" />
                                        </div>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Color name :</span>
                                            <field name="color_id" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">size_type :</span>
                                            <field name="size_id" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div> 
                                    </div>

                                    <!-- Thông tin người tạo -->
                                    <div style="flex: 1; background-color:rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                        <h3 style="font-size: 14px; font-weight: bold;">
                                            <span class="fa fa-list-alt" style="color: gray; margin-right: 5px;"></span>Thông số sản phẩm 
                                        </h3>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Order.Qty :</span>
                                            <field name="order_qty" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px">
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Test.Qty :</span>
                                            <field name="test_qty" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">Unit Cost:</span>
                                            <field name="unit_cost" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px">
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">EXT :</span>
                                            <field name="ext"  />
                                        </div>
                                        <!--
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px">
                                            <span style="min-width: 90px; display: inline-block; font-weight: bold;">ppk :</span>
                                            <field name="ppk" style="border: 1px solid #ced4da; width: 100%;" />
                                        </div> -->                                      
                                    </div>
                                </div>
                            </page>
                            <page string="Mô tả, thông tin khác" class="fw-bold">
                                <div style="display: flex; gap: 10px; margin-bottom: 0px;">
                                    <!-- Thông tin khác -->
                                    <div style="flex: 1; background-color: rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                        <h3 style="font-size: 14px; font-weight: bold;">
                                            <span class="fa fa-cogs" style="color: gray; margin-right: 5px;"></span>Thông tin tạo Style(Color,Size)
                                        </h3>
                                            <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                                <span style="min-width: 90px; display: inline-block; font-weight: bold;">Người tạo :</span>
                                                <field name="employee_id" widget="many2one_avatar_user" style="border: 1px solid #ced4da; width: 100%;" readonly="1" />
                                            </div> 
                                            <div style="display: flex;margin-bottom: 8px;font-size: 13px" >
                                                <span style="min-width: 90px; display: inline-block; font-weight: bold;">Ngày tạo :</span>
                                                <field name="date_create" style="border: 1px solid #ced4da; width: 100%;" readonly="1" />
                                            </div> 
                                    </div>
                                    <div style="flex: 1; background-color: rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                        <h3 style="font-size: 14px; font-weight: bold;">
                                            <span class="fa fa-info-circle" style="color: gray; margin-right: 5px;"></span>Thông tin khác
                                        </h3>
                                            <div style="margin-bottom: 8px;font-size: 13px">
                                                <span style="min-width: 90px; display: inline-block; font-weight: bold;">Mô tả :</span>
                                                <field name="description" style="border: 1px solid #ced4da; width: 100%;" />
                                            </div> 
                                    </div>
                                    <div style="flex: 1; background-color: rgb(237, 237, 237); padding: 10px; border-radius: 6px;">
                                        <h3 style="font-size: 14px; font-weight: bold;">
                                            <span class="fa fa-image" style="color: gray; margin-right: 5px;"></span>Mẫu Style
                                        </h3>
                                        <div style="display: flex;margin-bottom: 8px;font-size: 13px;" >
                                            <field name="image_128" widget="image" class="oe_avatar"
                                                options="{'preview_image': 'image_128'}"
                                                style="border-radius: 50%; width: 80px; height: 80px; object-fit: cover;" readonly="1"/>
                                        </div> 
                                    </div>
                                </div>
                            </page>
                        </notebook>
                            <!-- PHẦN 2: DANH SÁCH VẬT TƯ -->
                        <div style="background-color: rgb(237, 237, 237); padding: 0 15px; border-radius: 6px;">
                            <notebook>
                                <page string="VẬT TƯ ĐỊNH MỨC" class="fw-bold"> 
                                    <!-- Thanh tiêu đề và tìm kiếm -->
                                    <div class="d-flex align-items-center justify-content-between" style="margin-bottom: 10px;">
                                            
                                        <!-- BÊN TRÁI: Tiêu đề -->
                                        <div style="flex: 1; font-weight: bold; font-size: 14px;">
                                            <span class="fa fa-list-alt" style="padding-right: 6px; color: gray;"/>Danh sách vật tư định mức
                                        </div>

                                        <!-- Ở GIỮA: Ô tìm kiếm -->
                                        <div style="flex: 1; display: flex; justify-content: center;">
                                            <div style="width: 500px; display: flex; justify-content: center; align-items: center; height: 38px; border: 1px solid #ced4da; border-radius: 3px; padding: 4px 8px;">
                                                <field name="norm_available_material_type_ids" invisible="1" />
                                                <field name="norm_available_supplier_ids" invisible="1" />
                                                <field name="material_search_active" invisible="1"/>
                                                <field name="norm_search_mtr_type" domain="[('id', 'in', norm_available_material_type_ids)]" placeholder="Lọc theo loại vật tư..." style="flex: 1; border: none; outline: none; margin-right: 5px; "/>
                                                <field name="norm_search_supplier" domain="[('id', 'in', norm_available_supplier_ids)]" placeholder="Lọc theo nhà cung cấp..." style="flex: 1; border: none; outline: none; margin-right: 5px;"/>
                                                <field name="material_search_text" placeholder="Lọc theo mã vật tư..." style="flex: 1; border: none; outline: none;"/>
                                            </div>
                                        </div>

                                        <!-- BÊN PHẢI: Các nút -->
                                        <div style="flex: 1; display: flex; gap: 10px; align-items: center; justify-content: flex-end;">

                                            <!-- Nút Export -->
                                            <button type="object" name="action_export" class="btn btn-outline-primary btn-sm" title="Export"
                                                    style="border-radius: 4px;">
                                                <span class="fa fa-upload" style="margin-right: 5px;"></span>
                                                <span style="color: #007bff;">Export</span>
                                            </button>

                                            <!-- Nút Tuỳ chọn -->
                                            <div class="dropdown">
                                                <button name="button_dummy" type="object" class="btn btn-light fa fa-ellipsis-v"
                                                        data-bs-toggle="dropdown" aria-expanded="false" title="Tuỳ chọn"/>
                                                <div class="dropdown-menu" role="menu">
                                                    <div class="dropdown-divider"/>
                                                    <!--
                                                    <button name="action_delete_selected_lines" type="object" class="dropdown-item text-danger">
                                                        <i class="fa fa-trash me-2"/>Xoá
                                                    </button>-->
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div style="text-align: right; font-size: 14px; color: #6c757d; margin: 4px 10px;">
                                            <i class="fa fa-list-ul" style="margin-right: 5px; color: #6c757d;"/> 
                                            <span><field name="material_count_line" readonly="1" nolabel="1"/> VẬT TƯ</span>
                                    </div>
                                    <div style="overflow-x: auto; max-width: 100%; height: 65vh; overflow-y: auto;">
                                        <!-- Tree view danh sách vật tư -->
                                        <field name="filtered_material_line" string=" "        
                                            context="{'active_id': id, 'active_model': 'product.color.size'}">
                                            <tree string="Định mức" class="o_program_list_view_product"  create="True" delete="True" >
                                                <!-- Thông tin vật tư -->
                                                <field name="position" string="Position" optional="hide"/>
                                                <field name="name" string="Mtr#" help="Mã vật tư"/> 
                                                <field name="mtr_type" string="Mtr Type" help="Loại vật tư"/> 
                                                <field name="mtr_code" string="Mtr Code" help="Mã vật tư"/>
                                                <field name="mtr_name" string="Mtr Name" help="Tên vật tư"/> 
                                                <field name="rate" string="Unit" help="Đơn vị tính"/>         
                                                 <!-- Thông số dimension theo Style(size) -->
                                                <field name="dimension" string="Dimension" help="Kích thước"/> 
                                                <!-- Thông tin màu sắc vật tư -->
                                                <field name="color_item" string="Color#" help="Mã item màu"/>
                                                <field name="color_code" string="Color Code" help="Mã màu" optional="hide"/> 
                                                <field name="color_name" string="Color Name" help="Tên màu"/> 
                                                <field name="color_set" string="Color Set" help="Bộ màu"/> 
                                                <!-- Thông tin nhà cung cấp -->
                                                <field name="supplier_index" string="Supplier#" />
                                                <field name="supplier" string="Supplier" help="Nhà cung cấp"/>
                                                <field name="country" string="Country" optional="hide" />
                                                 <!-- Thông số định mức theo style(Color,size) -->
                                                <field name="consumption" string="Consumption" />
                                                <!-- Thông tin giá theo Style(size)-->
                                                <field name="price" string="Price" help="Đơn Giá" />
                                                <field name="cif_price" string="CIF Price" help="Giá bán cho khách" optional="hide"/>
                                                <field name="fob_price" string="FOB Price" help="Giá mua vào" optional="hide"/> 
                                                <field name="exwork_price" string="EXW Price" help="Giá xuất xưởng" optional="hide"/> 
                                                <!-- Thông tin tổng giá trị  các giá * các định mức theo Style(size)-->
                                                <field name="total" string="Total" help="Tổng giá trị =consumption*Price"  />
                                                <field name="cif_total" string="CIF.Total" help="Tổng giá trị =consumption*cif_price" optional="hide"/>
                                                <field name="fob_total" string="FOB.Total" help="Tổng giá trị =consumption*fob_price" optional="hide" />
                                                <field name="exwork_total" string="EXW.Total" help="Tổng giá trị =consumption*exwork_price" optional="hide" />
                                                <!--<button name="action_delete_all_lines" type="object" icon="fa-trash" class="text-danger" 
                                                    confirm="Bạn có chắc chắn muốn xóa dòng này không?" title="Xóa dòng"/>-->
                                            </tree>
                                        </field>
                                    </div>                             
                                </page>
                                <page string="TỔNG VẬT TƯ" class="fw-bold">
                                    <!--Thanh tiêu đề và tìm kiếm -->
                                    <div class="d-flex align-items-center justify-content-between" style="margin-bottom: 10px;">
                                            
                                        <!-- BÊN TRÁI: Tiêu đề -->
                                        <div style="flex: 1; font-weight: bold; font-size: 14px;">
                                            <span class="fa fa-list-alt" style="padding-right: 6px; color: gray;"/>Danh sách tổng vật tư Style (Color + Size)
                                        </div>

                                        <!-- Ở GIỮA: Ô tìm kiếm -->
                                        <div style="flex: 1; display: flex; justify-content: center;">
                                            <div style="width: 500px; display: flex; justify-content: center; align-items: center; height: 38px; border: 1px solid #ced4da; border-radius: 3px; padding: 4px 8px;">
                                                <field name="agg_available_material_type_ids" invisible="1" />
                                                <field name="agg_available_supplier_ids" invisible="1" />
                                                <field name="search_active" invisible="1"/>
                                                <field name="search_mtr_type"  domain="[('id', 'in', agg_available_material_type_ids)]" placeholder="Lọc theo loại vật tư..." style="flex: 1; border: none; outline: none; margin-right: 5px; "/>
                                                <field name="search_supplier" domain="[('id', 'in', agg_available_supplier_ids)]" placeholder="Lọc theo nhà cung cấp..." style="flex: 1; border: none; outline: none; margin-right: 5px;"/>
                                                <field name="search_text" placeholder="Lọc theo mã vật tư ..." style="flex: 1; border: none; outline: none;"/>
                                                <button type="object" name="action_apply_search" class="btn btn-link p-0" title="Search" invisible="search_active == True">
                                                    <span class="fa fa-search" style="color: #6c757d;"/>
                                                </button>
                                                <button type="object" name="action_clear_search" class="btn btn-link p-0" title="Clear" invisible="search_active == False">
                                                    <span class="fa fa-times" style="color: #6c757d;"/>
                                                </button>
                                            </div>
                                        </div>

                                        <!-- BÊN PHẢI: Các nút -->
                                        <div style="flex: 1; display: flex; gap: 10px; align-items: center; justify-content: flex-end;">
                                            <!--Cập nhật vật tư -->
                                            <button type="object" name="action_compute_grouped_materials" class="btn btn-outline-warning btn-sm"
                                                    title="Cập nhật vật tư" style="border-radius: 4px;">
                                                <span class="fa fa-refresh" style="margin-right: 5px;"></span>
                                                <span style="color: #ff9800;">Cập nhật vật tư</span>
                                            </button>

                                            <!-- Nút Export -->
                                            <button type="object" name="action_export_aggregated_material" class="btn btn-outline-primary btn-sm" title="Export"
                                                    style="border-radius: 4px;">
                                                <span class="fa fa-upload" style="margin-right: 5px;"></span>
                                                <span style="color: #007bff;">Export</span>
                                            </button>

                                                <!-- Nút Tuỳ chọn -->
                                            <div class="dropdown">
                                                <button name="button_dummy" type="object" class="btn btn-light fa fa-ellipsis-v"
                                                        data-bs-toggle="dropdown" aria-expanded="false" title="Tuỳ chọn"/>
                                                <div class="dropdown-menu" role="menu">
                                                    <div class="dropdown-divider"/>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div style="text-align: right; font-size: 14px; color: #6c757d; margin: 4px 10px;">
                                            <i class="fa fa-list-ul" style="margin-right: 5px; color: #6c757d;"/> 
                                            <span><field name="material_count" readonly="1" nolabel="1"/> VẬT TƯ</span>
                                    </div>
                                    <div style="overflow-x: auto; max-width: 100%; height: 65vh; overflow-y: auto;">
                                        <!-- Tree view danh sách vật tư -->
                                        <field name="filtered_aggregated_material_ids" string=" " >
                                            <tree string="Định mức" class="o_program_list_view_product" editable="bottom" create="false"  >
                                                <!-- Thông tin vật tư -->
                                                <field name="name" string="Mtr#" help="Mã vật tư"/> 
                                                <field name="mtr_type" string="Mtr Type" help="Loại vật tư"/> 
                                                <field name="mtr_code" string="Mtr Code" help="Mã vật tư"/>
                                                <field name="mtr_name" string="Mtr Name" help="Tên vật tư"/> 
                                                <field name="rate" string="Unit" help="Đơn vị tính"/>         
                                                 <!-- Thông số dimension theo Style(size) -->
                                                <field name="dimension" string="Dimension" help="Kích thước"/> 
                                                <!-- Thông tin màu sắc vật tư -->
                                                <field name="color_item" string="Color#" help="Mã item màu"/>
                                                <field name="color_code" string="Color Code" help="Mã màu" optional="hide"/> 
                                                <field name="color_name" string="Color Name" help="Tên màu"/> 
                                                <field name="color_set" string="Color Set" help="Bộ màu"/> 
                                                <!-- Thông tin nhà cung cấp -->
                                                <field name="supplier_index" string="Supplier#" />
                                                <field name="supplier" string="Supplier" help="Nhà cung cấp"/>
                                                <field name="country" string="Country" optional="hide" />
