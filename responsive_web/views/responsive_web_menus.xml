<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Hành động client -->
    <record id="action_web_responsive" model="ir.actions.client">
        <field name="name">Web Responsive</field>
        <field name="tag">web_responsive</field>
    </record>

    <!-- Hành động server để đặt Web Responsive làm mặc định -->
    <record id="set_default_action_web_responsive" model="ir.actions.server">
        <field name="name">Set Default Web Responsive</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
            action = env['res.users'].browse(env.uid).write({'action_id': env.ref('responsive_web.action_web_responsive').id})
        </field>
    </record>

    <menuitem id="menu_responsive_web_root"
            name="Web Responsive"
            sequence="-20"
            action="action_web_responsive"/>
</odoo>