<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="base.module_category_human_resources_employee" model="ir.module.category">
        <field name="sequence">900</field>
        <field name="name">Ứng dụng Nhân Viên</field>
    </record>

    <record id="group_cf_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_human_resources_employee"/>
        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
        <field name="comment">Không có quyền truy cập.</field>
    </record>

    <record id="group_cf_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(6, 0, [ref('Employee.group_cf_user')])]"/>
        <field name="category_id" ref="base.module_category_human_resources_employee"/>
    </record>

    <record id="group_cf_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">Có quyền xem, sửa, xóa</field>
        <field name="category_id" ref="base.module_category_human_resources_employee"/>
        <field name="implied_ids" eval="[(6, 0, [ref('Employee.group_cf_manager')])]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>

