<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="change_employee_main_info_form" model="ir.ui.view">
         <field name="name">change.main.info.form</field>
        <field name="model">change.main.info</field>
        <field name="arch" type="xml">
            <form class="o_employee3c_form_border">
                <sheet >
                    <group>

                        <group>
                            <field name="department_id" options="{'no_open': True}"  placeholder="--Chọn phòng ban--"/>
                            <field name="position_type" string = "Vị trí công tác" options="{'no_open': True}" placeholder="--Chọn vị trí công tác--"/>
                            <field name="start_date" placeholder="--Chọn ngày bắt đầu--"/>
                            <field name="email" placeholder="--Nhập email--"/>
                            <field name="image_1920" widget='image' options="{'size': [50, 50]}"/>
                        </group>
                        <group>
                            <field name="position_id" options="{'no_open': True}" placeholder="--Chọn vị trí công tác--"/>
                            <field name="employee_type_2" options="{'no_open': True}" placeholder="--Chọn loại nhân viên--"/>
                            <field name="official_date" placeholder="--Chọn ngày bắt đầu--"/>
                            <field name="employee_index" placeholder="--Nhập mã nhân viên--"/>
                            <field name="parent_id" options="{'no_open': True}" widget="many2one_avatar_user"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <field name="employee_id"  invisible="1"/>
                        <field name="user_id" invisible="1"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="change_employee_main_info" model="ir.actions.act_window">
        <field name="name">Thay đổi thông tin công việc</field>
        <field name="res_model">change.main.info</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>