<odoo>
    <data noupdate="1">
        <!-- Cron job to update contract status -->
        <record id="cron_employee_state_update" model="ir.cron">
            <field name="name">Cập nhật tình trạng làm việc của nhân viên</field>
            <field name="model_id" ref="model_employee_base"/>
            <field name="state">code</field>
            <field name="code">model.update_employee_state()</field>
            <field name="active" eval="True"/>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field> <!-- Run every 1 day -->
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>