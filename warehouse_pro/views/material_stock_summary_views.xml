<odoo>
    <data>
        <!-- ################################################################## -->
        <!-- # Model: material.stock.summary                                  # -->
        <!-- ################################################################## -->

        <!-- Search View for Material Stock Summary -->
        <record id="view_material_stock_summary_search" model="ir.ui.view">
            <field name="name">material.stock.summary.search</field>
            <field name="model">material.stock.summary</field>
            <field name="arch" type="xml">
                <search string="Search Material Stock">
                    <field name="mtr_no"/>
                    <field name="mtr_name"/>
                    <field name="mtr_code"/>
                    <field name="store_id"/>
                    <field name="shelf_id"/>
                    <separator/>
                    <filter string="Has Stock" name="has_stock" domain="[('qty_closing', '!=', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Store" name="group_by_store" context="{'group_by': 'store_id'}"/>
                        <filter string="Shelf" name="group_by_shelf" context="{'group_by': 'shelf_id'}"/>
                        <filter string="Material Type" name="group_by_material_type" context="{'group_by': 'mtr_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree View for Material Stock Summary -->
        <record id="view_material_stock_summary_tree" model="ir.ui.view">
            <field name="name">material.stock.summary.tree</field>
            <field name="model">material.stock.summary</field>
            <field name="arch" type="xml">
                <tree string="Material Stock Summary" class="o_general_list_view_product">
                    <field name="mtr_no"/>
                    <field name="mtr_name"/>
                    <field name="rate"/>
                    <field name="store_id"/>
                    <field name="shelf_id" optional="hide"/>
                    <field name="shelf_level_id" optional="hide"/>
                    <field name="qty_opening" sum="Total Opening"/>
                    <field name="qty_in" sum="Total In"/>
                    <field name="qty_out" sum="Total Out"/>
                    <field name="qty_closing" sum="Total Closing"/>
                    <field name="value_closing" sum="Total Value" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Material Stock Summary -->
        <record id="view_material_stock_summary_form" model="ir.ui.view">
            <field name="name">material.stock.summary.form</field>
            <field name="model">material.stock.summary</field>
            <field name="arch" type="xml">
                <form string="Material Stock Summary">
                    <sheet>
                        <h1><field name="display_name" readonly="1"/></h1>
                        <group>
                            <group>
                                <field name="material_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="store_id"/>
                                <field name="shelf_id"/>
                                <field name="shelf_level_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Stock Movements">
                                <group>
                                    <group string="Opening Balance">
                                        <field name="qty_opening"/>
                                        <field name="value_opening"/>
                                    </group>
                                    <group string="Closing Balance">
                                        <field name="qty_closing"/>
                                        <field name="value_closing"/>
                                    </group>
                                    <group string="In Movements">
                                        <field name="qty_in"/>
                                        <field name="value_in"/>
                                    </group>
                                    <group string="Out Movements">
                                        <field name="qty_out"/>
                                        <field name="value_out"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Material Details">
                                <group>
                                    <group>
                                        <field name="mtr_no"/>
                                        <field name="mtr_name"/>
                                        <field name="mtr_code"/>
                                        <field name="mtr_type"/>
                                        <field name="rate"/>
                                        <field name="dimension"/>
                                    </group>
                                    <group>
                                        <field name="supplier"/>
                                        <field name="country"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Color Details">
                                <group>
                                    <field name="color_item"/>
                                    <field name="color_code"/>
                                    <field name="color_name"/>
                                    <field name="color_set"/>
                                </group>
                            </page>
                            <page string="Pricing">
                                 <group>
                                    <field name="price"/>
                                    <field name="cif_price"/>
                                    <field name="fob_price"/>
                                    <field name="exwork_price"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Material Stock Summary -->
        <record id="action_material_stock_summary" model="ir.actions.act_window">
            <field name="name">Warehouse Stock Summary</field>
            <field name="res_model">material.stock.summary</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_material_stock_summary_search"/>
            <field name="context">{'search_default_has_stock': 1, 'search_default_group_by_store': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No material stock records found.
                </p>
            </field>
        </record>

        <!-- ################################################################## -->
        <!-- # Model: material.stock.program.summary                          # -->
        <!-- ################################################################## -->

        <!-- Search View for Material Stock Program Summary -->
        <record id="view_material_stock_program_summary_search" model="ir.ui.view">
            <field name="name">material.stock.program.summary.search</field>
            <field name="model">material.stock.program.summary</field>
            <field name="arch" type="xml">
                <search string="Search Program Stock">
                    <field name="mtr_no"/>
                    <field name="mtr_name"/>
                    <field name="order_id"/>
                    <separator/>
                    <filter string="Has Stock" name="has_stock" domain="[('qty_closing', '!=', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Program" name="group_by_program" context="{'group_by': 'order_id'}"/>
                        <filter name="group_by_material" string="Material" context="{'group_by':'material_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Tree View for Material Stock Program Summary -->
        <record id="view_material_stock_program_summary_tree" model="ir.ui.view">
            <field name="name">material.stock.program.summary.tree</field>
            <field name="model">material.stock.program.summary</field>
            <field name="arch" type="xml">
                <tree string="Program Stock Summary" class="o_general_list_view_product">
                    <field name="order_id"/>
                    <field name="name"/>
                    <field name="mtr_name"/>
                    <field name="rate"/>
                    <field name="qty_opening" sum="Total Opening"/>
                    <field name="qty_in" sum="Total In"/>
                    <field name="qty_out" sum="Total Out"/>
                    <field name="qty_closing" sum="Total Closing"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Material Stock Program Summary -->
        <record id="view_material_stock_program_summary_form" model="ir.ui.view">
            <field name="name">material.stock.program.summary.form</field>
            <field name="model">material.stock.program.summary</field>
            <field name="arch" type="xml">
                <form string="Program Stock Summary">
                    <sheet>
                        <h2><field name="display_name" readonly="1"/></h2>
                        <group>
                            <field name="material_id" readonly="1" force_save="1"/>
                            <field name="order_id"/>
                        </group>
                        <notebook>
                            <page string="Stock Movements">
                                <group>
                                    <group string="Opening Balance">
                                        <field name="qty_opening"/>
                                        <field name="value_opening"/>
                                    </group>
                                    <group string="Closing Balance">
                                        <field name="qty_closing"/>
                                        <field name="value_closing"/>
                                    </group>
                                    <group string="In Movements">
                                        <field name="qty_in"/>
                                        <field name="value_in"/>
                                    </group>
                                    <group string="Out Movements">
                                        <field name="qty_out"/>
                                        <field name="value_out"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Material Details">
                                <group>
                                    <group>
                                        <field name="mtr_no"/>
                                        <field name="mtr_name"/>
                                        <field name="mtr_code"/>
                                        <field name="mtr_type"/>
                                        <field name="rate"/>
                                        <field name="dimension"/>
                                    </group>
                                    <group>
                                        <field name="supplier"/>
                                        <field name="country"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Material Stock Program Summary -->
        <record id="action_material_stock_program_summary" model="ir.actions.act_window">
            <field name="name">Program Stock Summary</field>
            <field name="res_model">material.stock.program.summary</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_material_stock_program_summary_search"/>
            <field name="context">{'search_default_group_by_program': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No program stock records found.
                </p>
            </field>
        </record>

    </data>
</odoo>