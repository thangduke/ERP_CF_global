<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sreach view -->
    <record id="view_warehouse_tag_search" model="ir.ui.view">
        <field name="name">warehouse.tag.search</field>
        <field name="model">warehouse.tag</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm thẻ kho">
                <field name="name" string="Tên thẻ"/>
                <field name="employee_id"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Không hoạt động" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_warehouse_tag_form" model="ir.ui.view">
        <field name="name">warehouse.tag.form</field>
        <field name="model">warehouse.tag</field>
        <field name="arch" type="xml">
            <form string="Warehouse Tag" class="o_form_full">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Tên thẻ..." required="1"/>
                        </h1>
                    </div>

                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="sequence"/>
                        <field name="color" widget="colorpicker"/>
                        <field name="active"/>
                    </group>

                    <group>
                        <field name="description" placeholder="Mô tả thêm..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_warehouse_tag_kanban" model="ir.ui.view">
        <field name="name">warehouse.tag.kanban</field>
        <field name="model">warehouse.tag</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="employee_id">
                <field name="name"/>
                <field name="color"/>
                <field name="description"/>
                <field name="employee_id"/>
                <field name="sequence"/>
                <field name="active"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_kanban_color_#{color}">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div><field name="description"/></div>
                                <div class="mt8">
                                    <span class="badge badge-secondary">Thứ tự: <field name="sequence"/></span>
                                    <span t-if="record.active.raw_value" class="badge badge-success">Hoạt động</span>
                                    <span t-if="!record.active.raw_value" class="badge badge-danger">Không hoạt động</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_warehouse_tag_tree" model="ir.ui.view">
        <field name="name">warehouse.tag.tree</field>
        <field name="model">warehouse.tag</field>
        <field name="arch" type="xml">
            <tree string="Warehouse Tags" class="o_general_list_view_product" decoration-success="active" decoration-muted="not active">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="sequence"/>
                <field name="color"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_warehouse_tag" model="ir.actions.act_window">
        <field name="name">Tags phân loại kho</field>
        <field name="res_model">warehouse.tag</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_warehouse_tag_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo thẻ tag để phân loại kho và kệ.
            </p>
        </field>
    </record>

</odoo>
