<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Garment Colorcard -->
    <record id="garment_colorcard_view_form" model="ir.ui.view">
        <field name="name">garment.colorcard.view.form</field>
        <field name="model">garment.colorcard</field>
        <field name="arch" type="xml">
            <form string="Color Card">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Spring Collection Color Card"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Main Information">
                            <field name="style_id"/>
                            <field name="material_id"/>
                            <field name="colorway_id"/>
                            <field name="material_color_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Material Details" name="material_details">
                            <group>
                                <group>
                                    <field name="position"/>
                                    <field name="mtr_no"/>
                                    <field name="mtr_code"/>
                                    <field name="mtr_name"/>
                                </group>
                                <group>
                                    <field name="mtr_type"/>
                                    <field name="rate"/>
                                    <field name="dimension"/>
                                    <field name="supplier"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Tree View for Garment Colorcard -->
    <record id="garment_colorcard_view_tree" model="ir.ui.view">
        <field name="name">garment.colorcard.view.tree</field>
        <field name="model">garment.colorcard</field>
        <field name="arch" type="xml">
            <tree string="Color Cards">
                <field name="name"/>
                <field name="style_id"/>
                <field name="material_id"/>
                <field name="colorway_id"/>
                <field name="material_color_id"/>
            </tree>
        </field>
    </record>
    <!-- Action Window for Garment Colorcard -->
    <record id="garment_colorcard_action" model="ir.actions.act_window">
        <field name="name">Color Cards</field>
        <field name="res_model">garment.colorcard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new color card
            </p>
        </field>
    </record>

    <!-- Menu Item for Garment Colorcard -->
    <menuitem
        id="garment_colorcard_menu"
        name="Color Cards"
        parent="garment_order_menu_root"
        action="garment_colorcard_action"
        sequence="20"/>

</odoo>