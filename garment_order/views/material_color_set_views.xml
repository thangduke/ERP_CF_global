<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Search View for material.color.set -->
        <record id="view_material_color_set_search" model="ir.ui.view">
            <field name="name">material.color.set.search</field>
            <field name="model">material.color.set</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm Bộ mã màu">
                    <field name="name" string="Tên bộ mã màu"/>
                    <separator/>
                    <filter string="Đang hoạt động" name="active" domain="[('active','=',True)]"/>
                    <filter string="Không hoạt động" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>
        <!-- Form View for material.color.set -->
        <record id="view_material_color_set_form" model="ir.ui.view">
            <field name="name">material.color.set.form</field>
            <field name="model">material.color.set</field>
            <field name="arch" type="xml">
                <form string="Bộ mã màu vật tư" create="0" edit="1">
                    <sheet style="max-width: 50%; margin-left: auto; margin-right: auto;">
                        <h1>
                            Thêm bộ mã màu vật tư mới
                        </h1>
                        <hr/>
                        <group>
                            <field name="name" placeholder="Tên bộ mã màu..." style="border: 1px solid #ced4da;"/>
                            <field name="description" placeholder="Mô tả..." style="border: 1px solid #ced4da;"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group string="Thông tin khác">
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="avatar_name_job" readonly="1"/>
                            <field name="date_create" readonly="1"/>
                        </group>
                        <div style="text-align: right; padding-top: 20px;">
                            <button special="save" class="btn btn-success"><i class="fa fa-check"/> Lưu</button>
                            <span style="color: white; padding-left:15px;"></span>
                            <button special="cancel" class="btn btn-secondary ms-2"><i class="fa fa-undo"/> Hủy bỏ</button>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for material.color.set -->
        <record id="view_material_color_set_tree" model="ir.ui.view">
            <field name="name">material.color.set.tree</field>
            <field name="model">material.color.set</field>
            <field name="arch" type="xml">
                <tree string="Bộ mã màu vật tư" class="o_general_list_view_product">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="color" widget="color"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Action for material.color.set -->
        <record id="action_material_color_set" model="ir.actions.act_window">
            <field name="name">Bộ mã màu vật tư</field>
            <field name="res_model">material.color.set</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_material_color_set_search"/>
        </record>
    </data>
</odoo>