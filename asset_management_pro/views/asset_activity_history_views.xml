<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search View for asset.activity.history -->
        <record id="view_asset_activity_history_search" model="ir.ui.view">
            <field name="name">asset.activity.history.search</field>
            <field name="model">asset.activity.history</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm Lịch sử hoạt động">
                    <field name="asset_id" string="Tài sản"/>
                    <field name="employee_id" string="Người thực hiện"/>
                    <field name="description" string="Nội dung"/>
                    <separator/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Tài sản" name="group_by_asset" context="{'group_by': 'asset_id'}"/>
                        <filter string="Người thực hiện" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Form View for asset.activity.history -->
        <record id="view_asset_activity_history_form" model="ir.ui.view">
            <field name="name">asset.activity.history.form</field>
            <field name="model">asset.activity.history</field>
            <field name="arch" type="xml">
                <form string="Lịch sử hoạt động" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="asset_id" readonly="1"/>
                                <field name="employee_id" widget="many2one_avatar_user" readonly="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nội dung">
                                <field name="description" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for asset.activity.history -->
        <record id="view_asset_activity_history_tree" model="ir.ui.view">
            <field name="name">asset.activity.history.tree</field>
            <field name="model">asset.activity.history</field>
            <field name="arch" type="xml">
                <tree string="Lịch sử hoạt động"  class="o_general_list_view_product" editable="bottom" create="false" edit="false" delete="false">
                    <field name="date" string="THỜI GIAN THỰC HIỆN"/>
                    <field name="asset_id" string="TÀI SẢN"/>
                    <field name="avatar_name_job" string="NGƯỜI THỰC HIỆN"/>
                    <field name="description" string="NỘI DUNG"/>
                </tree>
            </field>
        </record>

        <!-- Action for asset.activity.history -->
        <record id="action_asset_activity_history" model="ir.actions.act_window">
            <field name="name">Lịch sử hoạt động</field>
            <field name="res_model">asset.activity.history</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_asset_activity_history_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chưa có lịch sử hoạt động nào.
                </p>
            </field>
        </record>


    </data>
</odoo>